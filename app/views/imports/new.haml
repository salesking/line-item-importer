.header
  .head2
    .title
      = t('link.step', step: 3, total: 3)
      = t('imports.new')
  .head3
    - import_type = @import.attachment.mapping.import_type
    = t(import_type, scope: 'activerecord.attributes.mapping.enum_values.import_type')
    = "/"
    - document_type = @import.attachment.mapping.document_type
    %b= t(document_type, scope: 'activerecord.attributes.mapping.enum_values.document_type')
    = "/"
    = t('imports.total', count: @import.attachment.rows.size - 1)
    
  
#side
  .side-list
    .side-list-item
      = form_for [@attachment, @import] do |f|
        .actions
          = f.submit t('imports.create'), class: "btn btn-danger"
          = link_to t('link.back_to_list'), attachments_path, class: "btn secondary"

#content
  %table.table
    - @import.preview(20).each_with_index do |row, index|
      - if index == 0
        %thead
          - row.each do |item|
            %th= item
      - else
        %tr
        - row.each do |item|
          %td= item


